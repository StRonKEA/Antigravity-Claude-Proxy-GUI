{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the app",
  "windows": [
    "*"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-kill",
    "shell:allow-open",
    "fs:default",
    "fs:allow-home-read",
    "fs:allow-home-write",
    "fs:allow-home-read-recursive",
    "fs:allow-home-write-recursive",
    "fs:allow-exists",
    "fs:allow-mkdir",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://localhost:*"
        },
        {
          "url": "http://127.0.0.1:*"
        }
      ],
      "deny": []
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "npm",
          "cmd": "npm.cmd",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        },
        {
          "name": "check-version",
          "cmd": "antigravity-claude-proxy.cmd",
          "args": [
            "--version"
          ]
        },
        {
          "name": "start-proxy",
          "cmd": "antigravity-claude-proxy.cmd",
          "args": true
        },
        {
          "name": "taskkill",
          "cmd": "taskkill.exe",
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell.exe",
          "args": true
        },
        {
          "name": "sh",
          "cmd": "sh",
          "args": true
        },
        {
          "name": "start-proxy-unix",
          "cmd": "antigravity-claude-proxy",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "npm",
          "cmd": "npm.cmd",
          "args": true
        },
        {
          "name": "node",
          "cmd": "node",
          "args": true
        },
        {
          "name": "check-version",
          "cmd": "antigravity-claude-proxy.cmd",
          "args": [
            "--version"
          ]
        },
        {
          "name": "start-proxy",
          "cmd": "antigravity-claude-proxy.cmd",
          "args": true
        },
        {
          "name": "npm-unix",
          "cmd": "npm",
          "args": true
        },
        {
          "name": "start-proxy-unix",
          "cmd": "antigravity-claude-proxy",
          "args": true
        },
        {
          "name": "check-version-unix",
          "cmd": "antigravity-claude-proxy",
          "args": [
            "--version"
          ]
        }
      ]
    }
  ]
}